<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="evtomak.iu.edu.notes2.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_main_to_userScreen"
            app:destination="@id/userScreen" />
    </activity>

    <fragment
        android:id="@+id/userScreen"
        android:name="evtomak.iu.edu.notes2.UserScreen"
        android:label="fragment_user_screen"
        tools:layout="@layout/fragment_user_screen" />
</navigation>
